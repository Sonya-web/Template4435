<Window x:Class="Template4435.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Template4435"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400" MinHeight="400" MinWidth="400">
    <Grid>
        <UniformGrid Columns="3" Rows="1">
            <Button x:Name="Btn"  Click="Btn_Click" Content="4435 Багаутинова" Grid.Row="2" Width="Auto" HorizontalAlignment="Left" Height="100"></Button>
            <Button x:Name="BtnImport" Click="BtnImport_Click" Content="Импорт данных" Grid.Row="2" Width="Auto" HorizontalAlignment="Center" Height="100"></Button>
            <Button x:Name="BtnExport" Click="BtnExport_Click" Content="Экспорт данных" Grid.Row="2" Width="Auto" HorizontalAlignment="Right" Height="100"></Button>
        </UniformGrid>
    </Grid>
</Window>